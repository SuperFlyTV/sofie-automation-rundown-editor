{
	"name": "@sofie-rundown-editor/backend",
	"version": "1.3.1",
	"private": true,
	"description": "A standalone tool for creating and editing Sofie rundowns.",
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"scripts": {
		"dev": "nodemon",
		"build": "run -T rimraf dist && run build:main",
		"build:main": "run -T tsc -p tsconfig.json",
		"watch-types": "run build:main --watch --noEmit",
		"lint": "run -T eslint .",
		"_": "_",
		"_electron:build": "vue-cli-service electron:build",
		"_electron:serve": "vue-cli-service electron:serve",
		"_license-validate": "license-checker -r --filter MIT --filter 0BSD --filter BSD --filter ISC --filter Apache --filter Unlicense --plain --border ascii",
		"_lint-fix": "yarn lint --fix",
		"_validate:dependencies": "yarn npm audit --environment production && yarn license-validate",
		"_validate:dev-dependencies": "yarn npm audit --environment development"
	},
	"main": "dist/main.js",
	"dependencies": {
		"@electron/remote": "^2.1.2",
		"@sofie-automation/server-core-integration": "1.53.0-nightly-release53-20250423-081454-dc957dd.0",
		"@types/uuid": "^10.0.0",
		"electron-is-dev": "^2.0.0",
		"type-fest": "^4.41.0",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@types/electron-devtools-installer": "^4.0.0",
		"@types/node": "^22.15.21",
		"electron": "36.3.1",
		"electron-builder": "25.1.8",
		"electron-devtools-installer": "^4.0.0",
		"nodemon": "^3.1.10",
		"typescript": "~5.8.3"
	},
	"license": "MIT",
	"packageManager": "yarn@4.9.1"
}
