		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@types/express": "^5",
		"@types/node": "^22.15.21",
		"cross-env": "^10.0.0",
		"dotenv-cli": "^10.0.0",
		"nodemon": "^3.1.10",
		"typescript": "~5.8.3"
