		"@types/sqlite3": "^3.1.7",
		"@types/uuid": "^8.3.1",
		"bootstrap": "^5.0.2",
		"bootstrap-vue": "^2.21.2",
		"core-js": "^3.6.5",
		"got": "^11.8.0",
		"knex": "^0.95.7",
